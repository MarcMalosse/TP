<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lorelei.tp.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:width="@android:dimen/thumbnail_width"
        android:text="Turquie"
        android:textSize="50px"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital : Ankara"
        android:textColor="dark"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Langue : Turque"
        android:textColor="dark"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:background="?android:attr/textColorLink"
        android:text="Annuler"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:text="Choisir"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="458dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="392dp"
        android:layout_height="86dp"
        android:layout_weight="0.96"
        android:height="@android:dimen/notification_large_icon_height"
        android:text="La Turquie, en forme longue la République de Turquie, en turc : Türkiye et Türkiye Cumhuriyeti prononciation, est un pays transcontinental situé aux confins de l'Asie et de l'Europe."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="29px"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="372dp" />

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="547dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-70dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="7dp"
            android:layout_height="312dp"
            android:layout_weight="0.96"
            android:src="@drawable/pont"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="16dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
